(function($){


$( document ).ready(function() {


	/*********************
	dimensione viewport
	*********************/ 	
	
	function break_width(){
		var bwidth=$(window).width();
	return(bwidth);
	}
	
	function w_height(){
		var wheigh=($(window).height());
	return(wheigh);
	}




	//alert('pippo');
	$('.dropdown-toggle').mouseenter(function(){

		$('.dropdown-menu').slideUp();
		/*trovo l'id del parent*/
		var id=$(this).attr('id');
		//alert(id); 
		$("#"+id+"-tab").stop().slideDown();
			
	});
	$('.dropdown-menu').mouseleave(function(){
		$(this).slideUp();
	});
	if (break_width() < 1080){

		$('.dropdown i').click(function(){
			$('.dropdown-menu').slideUp();
			$('.dropdown i').removeClass('act');
			$(this).toggleClass('act');
			if ($(this).hasClass('act')){
				/*trovo l'id del parent*/
				var id_mob=$(this).parent().find('a').attr('id');
				$("#"+id_mob+"-tab").stop().slideDown();
				$(this).removeClass('act');
				
			}else{
				$('.dropdown-menu').slideUp();
				
			
			}
		});
	}




	/*********************
	gestione menu mobile
	*********************/ 
	
	if (break_width() < 1080)
	$('#menu-toggle').click(function(){
		$(this).toggleClass('active').find('i').toggleClass('la-bars').toggleClass('la-times');

			function w_height_mob(){
				var wheigh=($(window).height());
				return(wheigh);
			}

			var header_m_height=($('#shopify-section-header header').height());
			var menu_mobile_h=parseInt(w_height_mob() - header_m_height);
			$('#main-menu').css({
				"height": menu_mobile_h+"px",
				"top":header_m_height+"px" 
			}).toggleClass('act');
	});
		



});//chiudo il document ready
})(jQuery); //definisco jquery