body{ 
	display:block;
	font: 300 14px  'Karla', sans-serif;
	background: #0ff;
	overflow: auto;
	width: 100%;
	color:#333;
	padding:0;
	margin:0;
}
.h1, .h2, .h3,.h4{ 
	font-family: 'Bodoni Moda', serif;
	font-weight: 600; 
	line-height: 1.2em;
	padding: 0;
	 margin: 0 0 30px;
	color:#000; 
	line-height: 1.5em;
	
}
.h1{font-size:2.750em; }
.h2{font-size:1.8em; 
	position: relative;
	overflow: hidden;
	text-align: left;
	
}
.h3{font-size:1.6em;}
.h4{font-size:1.5em;}
.h5{font-size:1.1em; }
.h6{font-size:1em;	color:#333;  margin: 0 0 10px;}
.h1.title,.h2.title, .h3.title, .h4.title  {
		font-style: italic;
		text-transform: lowercase;
	}
.h1.title:first-letter,.h2.title:first-letter,.h3.title:first-letter,.h4.title:first-letter {
	font-style: normal !important;
	text-transform: uppercase !important;
}