<main>
	<div id="column-left">
		{%- if product.imeges.size > 0 -%}
			<img src="{{ image | product_img_url: '480x480', scale 2, crop: 'center'  }}" alt={{ product-title | escape }} />
			{%- if product.image.size > 0 -%}
			<ul id="thumbnails">
				{%- for image in product.images -%}
				<li>
					<a href="{{ image | product_img_url: 'master' }}" target="_blanck">
					<img src="{{ image | product_img_url: '240x240', scale 2, crop: 'center'}}"  alt={{ product-title | escape }} />
					</a>
				</li>
				{%- endfor -%}
				
				}
			</ul>
			{%- endif -%}
			{%- else -%}
				{{ 'image' | placeholder_svg_tag }}
			{%- endif -%}
			
				
	</div>
	<div id="column-right">
		<h1>{{ product.title | escape }}</h1>
		<h5>{{ product.vendor | escape }}</h5>
		<h3>
			{% if profuct.price_varies %}
				{{ product.price_min | money }} - {{ product.price_max | money }} 
			{% else %}
				{{ product.price | money }}
			{% endif %}	
		</h3>
		{{ product.description }}
		

	</div>

</main>